<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
      integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="../style.css" />
    <title>Message Board</title>
  </head>
  <body>
    <div class="container">
      <div class="row mt-4 justify-content-center">
        <h1>The Dojo Message Board</h1>
      </div>
      <hr />
      <% if(messages.registration) { %> <% for (var x of messages.registration){
      %>
      <h3><%= x %></h3>
      <% } %> <% } %>
      <div class="row">
        <form action="/post_msg" method="POST">
          <div class="form-group">
            <label for="author">Name:</label>
            <input
              type="text"
              class="form-control"
              name="author"
              placeholder="Who are you?"
            />
          </div>
          <div class="form-group">
            <label for="message">Message:</label>
            <textarea
              class="form-control"
              name="message"
              rows="3"
              cols="900"
              placeholder="What could possibly be on your mind?"
            ></textarea>
          </div>
          <div class="row  justify-content-end">
            <input
              type="submit"
              name="submit"
              value="Post Message"
              class="btn btn-light"
            />
          </div>
        </form>
      </div>
      <% if(messages.length > 0) {%> <% for(var message of messages) {%>
      <h2>Name: <%= message.author %></h2>
      <h2>Message: <%= message.message %></h2>

      <% } %> <% for(var comment of message.comments) {%>
      <p>Name: <%= comment.name %></p>
      <p>Comment: <%= comment.comment %></p>
      <% } %>
      <div class="row">
        <form action="/post_comment/<%= message._id %>" method="POST">
          <div class="form-group">
            <label for="name">Name:</label>
            <input
              type="text"
              class="form-control"
              name="name"
              placeholder="Name here..."
            />
          </div>
          <div class="form-group">
            <label for="comment">Comment:</label>
            <textarea
              class="form-control"
              name="comment"
              rows="3"
              cols="900"
              placeholder="Comment here..."
            ></textarea>
          </div>
          <div class="row  justify-content-end">
            <input
              type="submit"
              name="submit"
              value="Leave Comment"
              class="btn btn-light"
            />
          </div>
        </form>
      </div>
      <% } %>
    </div>
  </body>
</html>
